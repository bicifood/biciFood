<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!-- Component Scan per Controllers -->
    <context:component-scan base-package="com.bicifood.controller"/>
    <context:component-scan base-package="com.bicifood.config"/>

    <!-- Habilitar anotacions MVC -->
    <mvc:annotation-driven>
        <mvc:message-converters>
            <!-- JSON Message Converter -->
            <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
                <property name="objectMapper">
                    <bean class="com.fasterxml.jackson.databind.ObjectMapper">
                        <property name="dateFormat">
                            <bean class="java.text.SimpleDateFormat">
                                <constructor-arg value="yyyy-MM-dd HH:mm:ss"/>
                            </bean>
                        </property>
                    </bean>
                </property>
            </bean>
        </mvc:message-converters>
    </mvc:annotation-driven>

    <!-- Recursos estàtics -->
    <mvc:resources mapping="/static/**" location="/static/" cache-period="31556926"/>
    <mvc:resources mapping="/css/**" location="/css/" cache-period="31556926"/>
    <mvc:resources mapping="/js/**" location="/js/" cache-period="31556926"/>
    <mvc:resources mapping="/images/**" location="/images/" cache-period="31556926"/>
    <mvc:resources mapping="/fonts/**" location="/fonts/" cache-period="31556926"/>

    <!-- View Resolver per JSP -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
        <property name="contentType" value="text/html;charset=UTF-8"/>
    </bean>

    <!-- Multipart Resolver per upload d'imatges -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.support.StandardServletMultipartResolver">
        <property name="maxUploadSize" value="10485760"/> <!-- 10MB -->
    </bean>

    <!-- Exception Resolver -->
    <bean class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
        <property name="exceptionMappings">
            <props>
                <prop key="java.lang.Exception">error/general</prop>
                <prop key="java.lang.RuntimeException">error/general</prop>
            </props>
        </property>
        <property name="defaultErrorView" value="error/general"/>
    </bean>

    <!-- Interceptors -->
    <mvc:interceptors>
        <!-- Interceptor per logging -->
        <bean class="com.bicifood.interceptor.LoggingInterceptor"/>
        
        <!-- Interceptor per autenticació (opcional) -->
        <mvc:interceptor>
            <mvc:mapping path="/admin/**"/>
            <bean class="com.bicifood.interceptor.AuthenticationInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <!-- CORS Configuration per API -->
    <mvc:cors>
        <mvc:mapping path="/api/**"
                     allowed-origins="http://localhost:3000, http://localhost:8080, http://127.0.0.1:5500"
                     allowed-methods="GET, POST, PUT, DELETE, OPTIONS"
                     allowed-headers="*"
                     allow-credentials="true"
                     max-age="3600"/>
    </mvc:cors>

    <!-- Configuració de locale -->
    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.SessionLocaleResolver">
        <property name="defaultLocale" value="ca"/>
    </bean>

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="messages"/>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>

</beans>