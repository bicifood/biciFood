# Configuració personalitzada de MySQL per BiciFood
# Aquest fitxer defineix configuracions optimitzades per l'aplicació

[mysqld]
# Configuració de caràcters per suportar català i emojis
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Configuració de la zona horària
default-time-zone = '+01:00'  # Europa/Madrid

# Configuració de rendiment per desenvolupament
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Configuració de connectivitat
max_connections = 100
max_allowed_packet = 64M

# Configuració de logs per debugging
log_error_verbosity = 3
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Configuració SQL Mode per compatibilitat
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO

[mysql]
# Configuració del client MySQL
default-character-set = utf8mb4

[client]
# Configuració per tots els clients
default-character-set = utf8mb4